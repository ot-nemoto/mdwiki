<%= content_tag(:div, nil, {:class => 'mdwiki_logo'}) do %>
  <%= render(:partial => "header") %>
<% end %>

<%= content_tag(:div, nil, {:class => 'mdwiki_header'}) do %>
  <%= content_tag(:ul) do %>
    <%= content_tag(:li) do %>
      <%= link_to('Preview', nil, {:onclick => 'preview();return false;', :class => 'mdwiki_button'}) %>
    <% end %>
    <%= content_tag(:li) do %>
      <%= link_to('Save', nil, {:onclick => @command + '();return false;', :class => 'mdwiki_button'}) %>
    <% end %>
    <%= content_tag(:li) do %>
      <%= link_to('Cancel', '/mdwiki/' + @id, {:class => 'mdwiki_button'}) %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag(:div, nil, {:class => 'mdwiki_breadcrumb'}) do %>
  <%= render(:partial => 'breadcrumb', :object => @breadcrumb_list) %>
<% end %>

<%= content_tag(:div, nil, {:class => 'mdwiki_edit'}) do %>
  <%= hidden_field_tag('page_id', @id) %>
  <%= content_tag(:div, text_field_tag('md_title', @md_title)) %>
  <%= content_tag(:div, text_area_tag('md_content', @md_content)) %>
<% end %>

<%= content_tag(:div, nil, {:id => 'attachment_content', :class => 'mdwiki_attachment'}) do %>
  <%= if @command == 'insert' then
        render(:partial => "noattachment")
      else
        render(:partial => "attachment", :object  => @attachment_list)
      end %>
<% end %>

<%= content_tag(:div, nil, {:id => 'preview_content', :class => 'mdwiki_preview'}) %>
