<%= content_tag(:ul) do %>
  <%= content_tag(:li) do %>
    <%= link_to image_tag('/assets/mdwiki-logo.png',:height => '40px'), '/mdwiki' %>
  <% end %>
<% end %>
<%= content_tag(:div, nil, {:class => 'mdwiki_menu'}) do %>
  <%= if @menu_flg[:preview] 
        content_tag(:span, link_to('&nbsp;&nbsp;'.html_safe, nil, 
          {:title => 'Preview', :onclick => 'return preview();', :class => 'mdwiki_btn mdwiki_preview_btn'})) 
      end %>
  <%= if @menu_flg[:save] 
        content_tag(:span, link_to('&nbsp;&nbsp;'.html_safe, nil, 
          {:title => 'Save', :onclick => 'return ' + @menu_flg[:save_cmd] + '();', :class => 'mdwiki_btn mdwiki_save_btn'})) 
      end %>
  <%= if @menu_flg[:cancel] 
        content_tag(:span, link_to('&nbsp;&nbsp;'.html_safe, '/mdwiki/' + @menu_flg[:cancel_id], 
          {:title => 'Cancel', :class => 'mdwiki_btn mdwiki_cancel_btn'})) 
      end %>
  <%= if @menu_flg[:create] 
        content_tag(:span, link_to('&nbsp;&nbsp;'.html_safe, '/mdwiki/' + @menu_flg[:create_id] + '/new', 
          {:title => 'Create', :class => 'mdwiki_btn mdwiki_create_btn'})) 
      end %>
  <%= if @menu_flg[:edit] 
        content_tag(:span, link_to('&nbsp;&nbsp;'.html_safe, '/mdwiki/' + @menu_flg[:edit_id] + '/edit', 
          {:title => 'Edit', :class => 'mdwiki_btn mdwiki_edit_btn'})) 
      end %>
  <%= if @menu_flg[:remove] 
        content_tag(:span, link_to('&nbsp;&nbsp;'.html_safe, nil, 
          {:title => 'Remove', :class => 'mdwiki_btn mdwiki_remove_btn'})) 
      end %>
  <%= content_tag(:span, text_field_tag('search_key')) %>
  <%= content_tag(:span, link_to('&nbsp;&nbsp;'.html_safe, nil, 
                                 {:title => 'Search', :class => 'mdwiki_btn mdwiki_search_btn'})) %>
  <%= content_tag(:span, session[:user_id]) %>
  <%= content_tag(:span, link_to('&nbsp;&nbsp;'.html_safe, nil, 
                                 {:title => 'Logout', :class => 'mdwiki_btn mdwiki_logout_btn', :onclick => 'return logout();'})) %>
<% end %>
